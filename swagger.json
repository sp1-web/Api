{
  "info": {
    "version": "1.0.0",
    "title": "MSPR-API",
    "description": "API du projet MSPR",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "swagger": "2.0",
  "tags": [
    {
      "name": "Auth",
      "description": "Connect, register or disconnect to application"
    }
  ],
  "definitions": {
    "ApiResponse": {
      "properties": {
        "success": { "type": "boolean" },
        "code": { "type": "integer" },
        "message": { "type": "string" },
        "data": { "type": "object" }
      },
      "type": "object"
    },
    "Article": {
      "properties": {
        "id": { "type": "uuid" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "img": { "type": "string" },
        "price": { "type": "double" },
        "createdAt": { "type": "datetime" },
        "updatedAt": { "type": "datetime" }
      },
      "type": "object"
    },
    "Promotion": {
      "properties": {
        "id": { "type": "uuid" },
        "qrcode_id": { "type": "uuid" },
        "article_id": { "type": "uuid" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "percentageReduction": { "type": "double" },
        "createdAt": { "type": "datetime" },
        "updatedAt": { "type": "datetime" }
      },
      "type": "object"
    },
    "QrCode": {
      "properties": {
        "id": { "type": "uuid" },
        "name": { "type": "string" },
        "token": { "type": "string" },
        "createdAt": { "type": "datetime" },
        "updatedAt": { "type": "datetime" }
      },
      "type": "object"
    },
    "User": {
      "properties": {
        "id": { "type": "uuid" },
        "firstname": { "type": "string" },
        "email": { "type": "string" },
        "password": { "type": "string" },
        "createdAt": { "type": "datetime" },
        "updatedAt": { "type": "datetime" }
      },
      "type": "object"
    },
    "UserPromotion": {
      "properties": {
        "id": { "type": "uuid" },
        "user_id": { "type": "uuid" },
        "promotion_id": { "type": "uuid" },
        "createdAt": { "type": "datetime" },
        "updatedAt": { "type": "datetime" }
      },
      "type": "object"
    }
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Connect to application",
        "tags": ["Auth"],
        "description": "",
        "parameters": [
          { "name": "email", "in": "body", "type": "string" },
          { "name": "password", "in": "body", "type": "string" }
        ],
        "responses": {
          "200": {
            "description": "Successfully connected",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "404": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/register": {
      "post": {
        "summary": "Register to application",
        "tags": ["Auth"],
        "description": "",
        "parameters": [
          { "name": "firstname", "in": "body", "type": "string" },
          { "name": "email", "in": "body", "type": "string" },
          { "name": "password", "in": "body", "type": "string" },
          { "name": "passwordConfirm", "in": "body", "type": "string" }
        ],
        "responses": {
          "201": {
            "description": "Successfully registered",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Account not registered"
          }
        }
      }
    }
  }
}
